<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/signup.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{signup.completeSignUp()}</from-action>
            <from-outcome>signin</from-outcome>
            <to-view-id>/signin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>*</from-view-id>
        <navigation-case>
            <from-outcome>index</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>signup</from-outcome>
            <to-view-id>/signup.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>signin</from-outcome>
            <to-view-id>/signin.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>get_money</from-outcome>
            <to-view-id>/get_money.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>change_bank</from-outcome>
            <to-view-id>/change_bank.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>changepassword</from-outcome>
            <to-view-id>/changepassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>addNewAd</from-outcome>
            <to-view-id>/addNewAd.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>notifications</from-outcome>
            <to-view-id>/notifications.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/passrecovery.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>asksecretquestion</from-outcome>
            <to-view-id>/asksecretquestion.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/asksecretquestion.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>changepassword</from-outcome>
            <to-view-id>/changepassword.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/guest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>witcher_additional_params</from-outcome>
            <to-view-id>/witcher_additional_params.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    
    <navigation-rule>
        <from-view-id>/guest.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>customer_additional_params</from-outcome>
            <to-view-id>/customer_additional_params.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>    

</faces-config>
